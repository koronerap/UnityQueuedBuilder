<Window x:Class="UnityQueuedBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unity Queued Builder"
        Height="800"
        Width="950"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#181818"
        Foreground="#E0E0E0"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Colors -->
        <Color x:Key="AccentColor">#007ACC</Color>
        <SolidColorBrush x:Key="AccentBrush"
                         Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DarkBackground"
                         Color="#1E1E1E"/>
        <SolidColorBrush x:Key="LighterBackground"
                         Color="#252526"/>
        <SolidColorBrush x:Key="BorderColor"
                         Color="#3E3E42"/>

        <!-- Animations -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource LighterBackground}"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="10,6"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1"
                                                ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#353538"/>
                                <Setter TargetName="border"
                                        Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background"
                    Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1"
                                                ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0098FF"/>
                                <Setter TargetName="border"
                                        Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin"
                    Value="0,0,0,5"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid SnapsToDevicePixels="true">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.RowSpan="2"
                                    Background="{StaticResource LighterBackground}"
                                    BorderThickness="0">
                            </Border>
                            <Border Grid.Row="0"
                                    Padding="10,6"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="0,0,0,1">
                                <ContentPresenter ContentSource="Header"
                                                  TextElement.FontWeight="Bold"
                                                  TextElement.FontSize="11"
                                                  TextElement.Foreground="#A0A0A0"/>
                            </Border>
                            <ContentPresenter Grid.Row="1"
                                              Margin="10"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <ControlTemplate x:Key="ComboBoxToggleButton"
                         TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border"
                        Grid.ColumnSpan="2"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"/>
                <Path x:Name="Arrow"
                      Grid.Column="1"
                      Fill="#AAA"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="true">
                    <Setter TargetName="Border"
                            Property="Background"
                            Value="#444"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ComboBox">
            <Setter Property="Background"
                    Value="#333"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll"
                    Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,2,23,2"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     Template="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="2,2,23,2"
                                     Focusable="True"
                                     Background="Transparent"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#2D2D30"
                                            BorderThickness="1"
                                            BorderBrush="#3F3F46"/>
                                    <ScrollViewer Margin="4,6,4,6"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems"
                                     Value="false">
                                <Setter TargetName="DropDownBorder"
                                        Property="MinHeight"
                                        Value="95"/>
                            </Trigger>
                            <Trigger Property="IsGrouping"
                                     Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="false"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Checkbox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground"
                    Value="#E0E0E0"/>
            <Setter Property="Margin"
                    Value="3"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent"
                                    SnapsToDevicePixels="True">
                            <Border x:Name="checkBoxBorder"
                                    Width="16"
                                    Height="16"
                                    Background="#333"
                                    BorderBrush="#555"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="checkMark"
                                      Data="M 2,5 L 6,10 L 14,1"
                                      Stroke="{StaticResource AccentBrush}"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="checkBoxBorder"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="checkMark"
                                        Property="Visibility"
                                        Value="Visible"/>
                                <Setter TargetName="checkBoxBorder"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="checkBoxBorder"
                                        Property="Background"
                                        Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background"
                    Value="#333"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Project / Output -->
            <RowDefinition Height="Auto"/>
            <!-- Config / Platforms -->
            <RowDefinition Height="*"/>
            <!-- Logs -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Margin="0,0,0,5">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <!-- Modern Logo: 3 Stacked Cubes/Diamonds -->
                    <Viewbox Width="32"
                             Height="32">
                        <Grid Width="40"
                              Height="40">
                            <Path Data="M 20,4 L 34,11 L 20,18 L 6,11 Z"
                                  Fill="#007ACC"
                                  Opacity="0.9"/>
                            <Path Data="M 20,14 L 34,21 L 20,28 L 6,21 Z"
                                  Fill="#007ACC"
                                  Opacity="0.7"/>
                            <Path Data="M 20,24 L 34,31 L 20,38 L 6,31 Z"
                                  Fill="#007ACC"
                                  Opacity="0.5"/>
                        </Grid>
                    </Viewbox>

                    <StackPanel Margin="12,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="UNITY QUEUED BUILDER"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontFamily="Segoe UI">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource AccentColor}"
                                                  BlurRadius="10"
                                                  Opacity="0.3"
                                                  ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Automated Batch Build System"
                                   FontSize="11"
                                   Foreground="#888888"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Project & Platforms -->
        <Grid Grid.Row="1"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Project Selection -->
            <GroupBox Header="PROJECT"
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Project Path Input -->
                    <Grid Grid.Column="0"
                          Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CmbRecentProjects"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Path"
                                  IsEditable="False"
                                  Text="Select Unity Project..."
                                  SelectionChanged="CmbRecentProjects_SelectionChanged"
                                  Padding="10,5"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Margin="5,0,0,0"
                                Click="BtnChooseProject_Click"
                                Padding="10,5"
                                FontSize="12"/>
                    </Grid>

                    <!-- Info Badges -->
                    <StackPanel Grid.Row="1"
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <Border Background="#3E3E42"
                                CornerRadius="0"
                                Padding="10,4"
                                Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="VERSION: "
                                           FontWeight="Bold"
                                           Foreground="#888"
                                           FontSize="11"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="LblUnityVersion"
                                           Text="NOT SELECTED"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="5,0,0,0"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#3E3E42"
                                CornerRadius="0"
                                Padding="10,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="STATUS: "
                                           FontWeight="Bold"
                                           Foreground="#888"
                                           FontSize="11"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="LblEditorStatus"
                                           Text="-"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="5,0,0,0"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="BtnInstallHub"
                                Content="FIX IN UNITY HUB"
                                Click="BtnInstallHub_Click"
                                Visibility="Collapsed"
                                Margin="10,0,0,0"
                                FontSize="10"
                                Padding="10,5"
                                Background="#C63838"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Output -->
            <GroupBox Header="OUTPUT"
                      Grid.Column="1"
                      Width="260"
                      Margin="0,0,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtOutputPath"
                                 IsReadOnly="True"
                                 Text="Default (Builds/)"/>
                        <Button Grid.Column="1"
                                Content="..."
                                Margin="5,0,0,0"
                                Click="BtnChooseOutput_Click"
                                Padding="8,5"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Exec Name:"
                                   VerticalAlignment="Center"
                                   Foreground="#AAA"
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="TxtExeName"
                                 Grid.Column="1"
                                 Text="Game"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Main Content (Configuration) -->
        <Grid Grid.Row="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="CONFIGURATION"
                      Grid.Column="0"
                      Margin="0,0,10,0">
                <StackPanel>
                    <!-- Profiles -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CmbProfiles"
                                  Margin="0,0,5,0"
                                  Padding="5"
                                  Height="26"/>
                        <Button x:Name="BtnSaveProfile"
                                Grid.Column="1"
                                Content="Save"
                                Click="BtnSaveProfile_Click"
                                Padding="5,0"
                                Margin="0,0,2,0"
                                FontSize="11"
                                Width="50"
                                Height="26"/>
                        <Button x:Name="BtnLoadProfile"
                                Grid.Column="2"
                                Content="Load"
                                Click="BtnLoadProfile_Click"
                                Padding="5,0"
                                Margin="0,0,2,0"
                                FontSize="11"
                                Width="50"
                                Height="26"/>
                        <Button x:Name="BtnDeleteProfile"
                                Grid.Column="3"
                                Content="X"
                                Click="BtnDeleteProfile_Click"
                                Padding="5,0"
                                Background="#C63838"
                                FontSize="11"
                                Width="26"
                                Height="26"/>
                    </Grid>

                    <CheckBox x:Name="ChkDevBuild"
                              Content="Development Build"
                              Checked="ChkDevBuild_Checked"
                              Unchecked="ChkDevBuild_Checked"/>
                    <CheckBox x:Name="ChkAutoIncrement"
                              Content="Auto Increment Version (+0.0.1)"
                              Margin="0,5,0,0"/>
                    <StackPanel Margin="20,5,0,5">
                        <CheckBox x:Name="ChkScriptDebug"
                                  Content="Script Debugging"
                                  IsEnabled="False"
                                  FontSize="12"/>
                        <CheckBox x:Name="ChkProfiler"
                                  Content="Autoconnect Profiler"
                                  IsEnabled="False"
                                  FontSize="12"/>
                    </StackPanel>
                    <Separator Background="#3E3E42"
                               Margin="0,5"/>
                    <CheckBox x:Name="ChkCleanBuild"
                              Content="Clean Build Cache"/>
                    <CheckBox x:Name="ChkZipOutput"
                              Content="Zip Output (Archive)"/>
                    <CheckBox x:Name="ChkOpenFolder"
                              Content="Open Folder When Done"
                              IsChecked="True"/>
                </StackPanel>
            </GroupBox>

            <!-- Platforms -->
            <GroupBox Header="PLATFORMS"
                      Grid.Column="1"
                      Margin="0,0,0,0"
                      Width="260">
                <StackPanel>
                    <UniformGrid Columns="2"
                                 Margin="0,0">
                        <CheckBox x:Name="ChkWindows"
                                  Content="Windows (64-bit)"/>
                        <CheckBox x:Name="ChkAndroid"
                                  Content="Android"/>
                        <CheckBox x:Name="ChkIOS"
                                  Content="iOS"/>
                        <CheckBox x:Name="ChkWebGL"
                                  Content="WebGL"/>
                        <CheckBox x:Name="ChkMacOS"
                                  Content="macOS (App)"/>
                        <CheckBox x:Name="ChkLinux"
                                  Content="Linux (64-bit)"/>
                    </UniformGrid>
                    <TextBlock x:Name="LblPlatformWarnings"
                               Text=""
                               Foreground="#FF5555"
                               TextWrapping="Wrap"
                               Margin="5,5,0,0"
                               FontSize="12"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Logs (RichTextBox) -->
        <GroupBox Header="LOGS"
                  Grid.Row="3"
                  Margin="0,0,0,10"
                  VerticalAlignment="Stretch"
                  VerticalContentAlignment="Stretch">
            <Border Background="#121212"
                    CornerRadius="0"
                    Padding="0"
                    VerticalAlignment="Stretch">
                <RichTextBox x:Name="RtbLogs"
                             Background="#121212"
                             Foreground="#A0A0A0"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             Padding="5"
                             VerticalAlignment="Stretch">
                    <FlowDocument>
                        <Paragraph Margin="0">
                            <Run Text="Waiting for commands..."/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>
        </GroupBox>

        <!-- Action Bar & Progress -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Area -->
            <StackPanel Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Total Elapsed Time:"
                               Foreground="#888"
                               FontSize="12"/>
                    <TextBlock x:Name="TxtTimer"
                               Grid.Column="1"
                               Text="00:00:00"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="10,0,0,0"
                               FontSize="12"/>
                </Grid>
                <ProgressBar x:Name="BuildProgressBar"
                             Height="6"
                             Margin="0,5,0,0"
                             Background="#333"
                             Foreground="{StaticResource AccentBrush}"
                             BorderThickness="0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    x:Name="BtnBuild"
                    Content="BUILD"
                    Click="BtnBuild_Click"
                    IsEnabled="False"
                    Style="{StaticResource PrimaryButton}"
                    Width="150"
                    Height="40"
                    FontSize="14"/>
        </Grid>
    </Grid>
</Window>
